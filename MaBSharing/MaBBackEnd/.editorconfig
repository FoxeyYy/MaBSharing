# EditorConfig is awesome: http://EditorConfig.org

# This is the top-most EditorConfig file
root = true

# Base configuration
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

# NPM configuration for package.json
[package.json]
indent_size = 2

# YAML configuration files for:
#
#     - Docker Compose service description
#
[*.{yml,yaml}]
indent_size = 2
